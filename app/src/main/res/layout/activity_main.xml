<?xml version="1.0" encoding="utf-8"?>
<LinearLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_main"
    style="@style/ThemeOverlay.AppCompat.Light"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.collections.listsandMaps.mvp.view.MainActivity">

    <EditText
        android:id="@+id/edt_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:hint="@string/input_size_please"
        android:inputType="number"
        android:lines="1"
        android:text="0"
        android:textAlignment="center" />


    <fragment
        android:id="@+id/fragment_collections"
        android:name="com.example.collections.listsandMaps.mvp.view.fragments.ListFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </fragment>

    <fragment
        android:id="@+id/fragment_maps"
        android:name="com.example.collections.listsandMaps.mvp.view.fragments.MapFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp">

    </fragment>


    <ProgressBar
        android:id="@+id/progress_bar"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="invisible" />

    <Button
        android:id="@+id/btn_calculate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/button_calculate" />


</LinearLayout>